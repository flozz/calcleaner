<component type="desktop-application">
    <id>org.flozz.calcleaner</id>
    <name>CalCleaner</name>
    <summary>A simple graphical tool to purge old events from CalDAV calendars</summary>
    <summary xml:lang="hr">Jednostavan grafički alat za brisanje starih događaja iz CalDAV kalendara</summary>
    <project_license>GPL-3.0-or-later</project_license>
    <developer_name>Fabien LOISON</developer_name>

    <url type="homepage">https://calcleaner.flozz.org/</url>
    <url type="bugtracker">https://github.com/flozz/calcleaner/issues</url>
    <url type="contact">https://contact.flozz.fr/</url>
